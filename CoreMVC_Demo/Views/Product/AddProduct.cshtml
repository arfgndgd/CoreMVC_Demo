@model ProductVM
@{
    ViewData["Title"] = "AddProduct";
}

<h1>Ürün Ekleme Sayfası</h1>

<form asp-action="AddProduct" asp-controller="Product" method="post">
    <div>
        <input type="text" asp-for="Product.ProductName" placeholder="Lütfen ürün ismi giriniz" />
    </div>
    <div>
        <input type="text" asp-for="Product.UnitInPrice" placeholder="Lütfen ürün fiyatı giriniz" />
    </div>
    <div>
        <input type="text" asp-for="Product.UnitInStock" placeholder="Lütfen ürün stoğu giriniz" />
    </div>
    <div>
        <select asp-for="Product.CategoryID" asp-items='new SelectList(Model.Categories,"ID","CategoryName")'>
            <option>
                Lütfen seçiniz
            </option>
        </select>
    </div>
    <div>
        <button class="btn btn-info">
            Ekle
        </button>
    </div> 
</form>
