@model CategoryVM
@{
    ViewData["Title"] = "AddCategory";
}

<h1>AddCategory</h1>

<!--Formu da artık actionlik ile açmıyoruz. TagHelper ile HTMLHelperlar aynı anda kullanılabilir. Ancak Html helperda "placeholder" kullanmak gerekir.-->
<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Lutfen Kategori Ismini Giriniz" />

        @Html.TextBoxFor(x => x.Category.Description, new { placeholder = "Lutfen Acıklama Giriniz" })

        <button>Ekle</button>
    </div>

</form>