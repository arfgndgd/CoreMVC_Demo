@model CategoryVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Categories.Count == 0)
{
    <div class="jumbotron">

        Henüz hicbir kategori eklenmemiş...Ürün eklemek icin <a asp-action="AddCategory" asp-controller="Category">tıklayınız</a>
        <!--Bu kısımda actionlinkte kullanabiliriz hatta aynı anda bile kullanabiliriz ancak core'da "asp-action"şekilde daha performanslıdır.

            Startup içinde controller ve interface ismmini yazmak gerekir. MVC gibi çalışmaz.
            -->
    </div>
}

else
{

    <table class="table table-hover">
        <tr>
            <th>CategoryName</th>
            <th>Description</th>
            <th style="text-align:center" colspan="2">Islemler</th>
        </tr>
        @foreach (Category item in Model.Categories)
        {//razor view syntaxlarını da kullanabiliriz 
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="UpdateCategory" asp-controller="Category">Kategori Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteCategory" asp-controller="Category">Kategori Sil</a>
                </td>
            </tr>
        }
    </table>
}
